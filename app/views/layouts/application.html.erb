<!DOCTYPE html>
<html>
  <head>
    <title>BallyBlogs</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <h1> <%= link_to "Bally Blogs", root_path, {:class => "header"}  %> </h1>
    <nav>

      <ul>

        <li>
          <%= link_to "Posts" , posts_path, {:class => "link"} %>
        </li>

        <% if !user_signed_in? %>
          <li>
            <%= link_to "Register", new_user_registration_path, {:class => "link"} %>
          </li>
          
          <li>
            <%= link_to "Login", new_user_session_path, {:class => "link"}  %>  
          </li>

        <% else %>

          <li>
            <%= link_to "New Post", new_post_path, {:class => "link"} %>   
          </li>
          
          <li>
            <%= link_to "Logout", destroy_user_session_path, {method: :delete, :class => "link"}  %>
          </li>

          <li>
            <%= link_to "Edit User", edit_user_registration_path, {:class => "link"}  %>
          </li>

        <% end %>

          <li>
            <%= link_to "<-" , :back, {:class => "link"}  %>
          </li>

      </ul>
    </nav>

    <% if notice %>
      <p class="notice"><%= notice %></p>
    <% end %>
    
    <% if alert %>
      <p class="alert"><%= alert %></p>
    <% end %>


    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= yield %>


  </body>
</html>
